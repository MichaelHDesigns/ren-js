{
    "name": "root",
    "private": true,
    "scripts": {
        "clean": "lerna run clean --scope @renproject/* && yarn rimraf ./node_modules",
        "build": "lerna run build --scope @renproject/*",
        "watch": "yarn build && lerna run watch --parallel --scope @renproject/*",
        "lint": "lerna run lint --scope @renproject/*",
        "fix": "lerna run fix --scope @renproject/*",
        "test": "lerna run test --scope @renproject/*",
        "test-no-bail": "lerna run test --no-bail --scope @renproject/*",
        "cov": "lerna run cov --scope @renproject/*"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@power-doctest/tester": "^5.3.0",
        "@types/chai": "^4.2.21",
        "@types/chai-as-promised": "^7.1.4",
        "@types/jest": "^26.0.24",
        "@types/mocha": "^9.0.0",
        "@types/node": "12.20.18",
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "@typescript-eslint/parser": "^4.29.0",
        "@xstate/test": "^0.4.2",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.2.2",
        "babel-plugin-import": "^1.13.3",
        "babel-polyfill": "^6.26.0",
        "babel-runtime": "^6.26.0",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "codecov": "^3.8.3",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "earljs": "^0.1.10",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsdoc": "^36.0.6",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-security": "^1.4.0",
        "ganache-core": "^2.13.2",
        "lerna": "^4.0.0",
        "mocha": "^9.0.3",
        "mocha-junit-reporter": "^2.0.0",
        "mocha-multi-reporters": "^1.5.1",
        "npm-run-all": "^4.1.5",
        "npmignore": "^0.2.0",
        "nyc": "^15.1.0",
        "open-cli": "^6.0.1",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "standard-version": "^9.3.1",
        "ts-loader": "^9.2.5",
        "ts-mocha": "^8.0.0",
        "tsdx": "^0.14.1",
        "typedoc": "^0.21.5",
        "typedoc-plugin-no-inherit": "^1.3.0",
        "typescript": "4.3.5",
        "webpack": "5.48.0",
        "webpack-cli": "^4.7.2",
        "webpack-node-externals": "^3.0.0"
    },
    "workspaces": [
        "packages/ui/ren-react",
        "packages/ui/react-components",
        "packages/ui/multiwallet-ui",
        "packages/ui/ren-js-example",
        "packages/lib/*",
        "packages/lib/chains/*",
        "packages/lib/multiwallet/*"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
