{
    "name": "@renproject/ren",
    "version": "0.4.6",
    "description": "Official Ren JavaScript client",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/republicprotocol/ren-js.git"
    },
    "keywords": [
        "ren",
        "renvm",
        "sdk"
    ],
    "author": "Ren",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/republicprotocol/ren-js/issues"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "lint:unused-exports": "ts-unused-exports ./tsconfig.json",
        "lint:outdated-imports": "ncu",
        "lint:ts": "tslint --project ./ -t stylish --quiet",
        "lint:extra": "npm run --silent lint:unused-exports; npm run --silent lint:outdated-imports",
        "lint:all": "npm run --silent lint:ts && npm run --silent lint:extra",
        "lint": "npm run --silent lint:ts",
        "watch": "cross-env NODE_ENV=development webpack --watch --mode development --display-error-details --progress --color",
        "build:dev": "cross-env NODE_ENV=development webpack --mode development --display-error-details --progress --color",
        "build:prod": "npm run clean && cross-env NODE_ENV=production webpack --mode production --progress --color",
        "test": "./node_modules/ts-mocha/bin/ts-mocha --timeout 180000 --paths -p ./tsconfig.json ./test/*.spec.ts ./test/**/*.spec.ts",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run lint",
        "prepare": "npm run build:prod"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@types/bn.js": "^4.11.5",
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "7.1.0",
        "@types/detect-node": "^2.0.0",
        "@types/expand-tilde": "^2.0.0",
        "@types/expect": "^1.20.4",
        "@types/mocha": "^5.2.7",
        "@types/node-fetch": "^2.3.7",
        "@types/node-persist": "0.0.33",
        "@types/node-rsa": "1.0.0",
        "@types/underscore": "^1.8.20",
        "@types/web3": "^1.0.18",
        "awesome-typescript-loader": "5.2.1",
        "babel-loader": "8.0.6",
        "babel-plugin-transform-es2015-modules-simple-commonjs": "^0.3.0",
        "babel-polyfill": "6.26.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cross-env": "5.2.0",
        "dotenv": "^8.0.0",
        "mocha": "^6.1.4",
        "npm-check-updates": "^3.1.11",
        "truffle-contract": "4.0.20",
        "truffle-hdwallet-provider": "1.0.10",
        "ts-loader": "^6.0.3",
        "ts-mocha": "^6.0.0",
        "ts-unused-exports": "^2.0.11",
        "tslint": "5.17.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-config-standard": "8.0.1",
        "tslint-eslint-rules": "5.4.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "tslint-react": "^4.0.0",
        "typedoc": "0.14.2",
        "typedoc-webpack-plugin": "1.1.4",
        "typescript": "3.5.2",
        "web3-fake-provider": "^0.1.0",
        "web3-provider-engine": "^15.0.0",
        "webpack": "4.34.0",
        "webpack-cli": "3.3.4",
        "webpack-node-externals": "1.7.2"
    },
    "dependencies": {
        "@types/bitcore-lib": "^0.15.1",
        "@types/bn.js": "^4.11.5",
        "@types/bs58": "^4.0.0",
        "@types/ethereumjs-abi": "^0.6.3",
        "@types/node": "^12.0.8",
        "axios": "^0.19.0",
        "bignumber.js": "^9.0.0",
        "bitcore-lib": "^8.3.4",
        "bitcore-lib-zcash": "zcash-hackworks/bitcore-lib-zcash",
        "bn.js": "^4.11.8",
        "bs58": "^4.0.1",
        "ethereumjs-abi": "^0.6.7",
        "immutable": "^4.0.0-rc.12",
        "wallet-address-validator": "^0.2.4",
        "web3": "^1.0.0-beta.55"
    }
}
