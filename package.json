{
    "name": "ren-js",
    "private": true,
    "scripts": {
        "clean": "lerna run clean --scope @renproject/* && yarn rimraf ./node_modules",
        "build": "lerna run build --scope @renproject/*",
        "watch": "yarn build && lerna run watch --parallel --scope @renproject/*",
        "lint": "lerna run lint --scope @renproject/*",
        "fix": "lerna run fix --scope @renproject/*",
        "test-no-bail": "lerna run test --no-bail --scope @renproject/*",
        "cov:all": "lerna run cov --scope @renproject/*",
        "test:all": "lerna run test --scope @renproject/*",
        "cov": "nyc ./node_modules/ts-mocha/bin/ts-mocha --color --sort --exit --timeout 180000 --paths -p ./tsconfig.json ./test/*.spec.ts ./test/**/*.spec.ts",
        "test": "ts-mocha --color --sort --exit --timeout 180000 --paths -p ./tsconfig.json ./test/*.spec.ts ./test/**/*.spec.ts",
        "link:all": "lerna run link --scope @renproject/*",
        "unlink:all": "lerna run unlink --scope @renproject/*",
        "doc:build": "yarn typedoc --entryPointStrategy packages .",
        "doc:publish": "yarn doc:build && gh-pages --repo git@github.com:renproject/ren-js-v3-docs.git -m \"[ci skip] Updates\" -d docs"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@nomiclabs/hardhat-ethers": "^2.0.3",
        "@truffle/hdwallet-provider": "2.0.0",
        "@types/chai": "^4.3.0",
        "@types/chai-as-promised": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^17",
        "@typescript-eslint/eslint-plugin": "^5.9.0",
        "@typescript-eslint/parser": "^5.9.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.2.3",
        "babel-plugin-import": "^1.13.3",
        "babel-polyfill": "^6.26.0",
        "babel-runtime": "^6.26.0",
        "bignumber.js": "^9.0.2",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "chalk": "^4.1.2",
        "codecov": "^3.8.3",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^10.0.0",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^37.5.1",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-security": "^1.4.0",
        "ethers": "^5.5.2",
        "gh-pages": "^3.2.3",
        "hardhat": "2.8.0",
        "lerna": "^4.0.0",
        "mocha": "^9.1.3",
        "npm-run-all": "^4.1.5",
        "npmignore": "^0.2.0",
        "nyc": "^15.1.0",
        "open-cli": "^7.0.1",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "send-crypto": "^0.2.33",
        "throat": "6.0.1",
        "ts-loader": "^9.2.6",
        "ts-mocha": "^8.0.0",
        "typedoc": "^0.22.10",
        "typescript": "4.5.4",
        "webpack": "5.65.0",
        "webpack-cli": "^4.9.1",
        "webpack-node-externals": "^3.0.0"
    },
    "workspaces": [
        "packages/*",
        "packages/chains/*"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "endOfLine": "lf",
        "arrowParens": "always"
    }
}
