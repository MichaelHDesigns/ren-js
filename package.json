{
    "name": "@renproject/ren",
    "version": "0.1.0",
    "description": "Official Ren JavaScript client",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/republicprotocol/renvm-sdk-js.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "ren",
        "renvm",
        "sdk"
    ],
    "author": "Ren",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/republicprotocol/renvm-sdk-js/issues"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "lint:unused-exports": "ts-unused-exports ./tsconfig.json",
        "lint:outdated-imports": "ncu",
        "lint:ts": "tslint --project ./ -t stylish --quiet",
        "lint:extra": "npm run --silent lint:unused-exports; npm run --silent lint:outdated-imports",
        "lint:all": "npm run --silent lint:ts && npm run --silent lint:extra",
        "lint": "npm run --silent lint:ts",
        "watch": "cross-env NODE_ENV=development webpack --watch --mode development --display-error-details --progress --color",
        "build": "cross-env NODE_ENV=development webpack --mode development --display-error-details --progress --color",
        "build:prod": "npm run clean && cross-env NODE_ENV=production webpack --mode production --progress --color",
        "test": "./.env || true; nyc ./node_modules/ts-mocha/bin/ts-mocha --bail --sort --exit --timeout 180000 --paths -p ./tsconfig.json ./test/*.ts ./test/**/*.ts",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run lint",
        "prepare": "npm run build:prod"
    },
    "devDependencies": {
        "@babel/core": "^7.5.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
        "@types/bn.js": "^4.11.5",
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "7.1.0",
        "@types/detect-node": "^2.0.0",
        "@types/expand-tilde": "^2.0.0",
        "@types/expect": "^1.20.4",
        "@types/mocha": "^5.2.7",
        "@types/node-fetch": "^2.3.7",
        "@types/node-persist": "0.0.33",
        "@types/node-rsa": "1.0.0",
        "@types/underscore": "^1.9.2",
        "babel-loader": "8.0.6",
        "babel-plugin-transform-es2015-modules-simple-commonjs": "^0.3.0",
        "babel-polyfill": "6.26.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-bignumber": "noiach/chai-bignumber#fd75e47",
        "cross-env": "5.2.0",
        "dotenv": "^8.0.0",
        "mocha": "^6.1.4",
        "npm-check-updates": "^3.1.20",
        "nyc": "^14.1.1",
        "qrcode-terminal": "^0.12.0",
        "truffle-hdwallet-provider": "1.0.14",
        "ts-loader": "^6.0.4",
        "ts-mocha": "^6.0.0",
        "ts-unused-exports": "^2.0.11",
        "tslint": "5.18.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-config-standard": "8.0.1",
        "tslint-eslint-rules": "5.4.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "tslint-react": "^4.0.0",
        "typedoc": "^0.15.0-0",
        "typedoc-webpack-plugin": "1.1.4",
        "typescript": "3.5.3",
        "webpack": "4.35.3",
        "webpack-cli": "3.3.6",
        "webpack-node-externals": "1.7.2"
    },
    "dependencies": {
        "@renproject/contracts": "0.3.7",
        "@types/bitcore-lib": "^0.15.1",
        "@types/bn.js": "^4.11.5",
        "@types/bs58": "^4.0.0",
        "@types/ethereumjs-util": "^5.2.0",
        "@types/node": "^12.6.3",
        "axios": "^0.19.0",
        "bignumber.js": "^9.0.0",
        "bitcore-lib": "^8.3.4",
        "bitcore-lib-zcash": "zcash-hackworks/bitcore-lib-zcash",
        "bn.js": "^5.0.0",
        "bs58": "^4.0.1",
        "ethereumjs-util": "^6.1.0",
        "immutable": "^4.0.0-rc.12",
        "wallet-address-validator": "^0.2.4",
        "web3": "^1.0.0-beta.55",
        "web3-core": "^1.0.0-beta.55",
        "web3-eth-abi": "^1.0.0-beta.55"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "reporter": [
            "text",
            "html"
        ],
        "include": [
            "src"
        ]
    }
}
